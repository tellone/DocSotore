
#profile
  %h2 Profile
  %h5 Email - 
  =@user.email

  %p
    -if can? :update, @user
      = link_to "edit profile", edit_user_path(@user)

    -if can? :manage, @user
      =link_to "delete user", root_path
      -# = link_to "delete user", :method => :delete, :confirm => "Do you realy want to remove this user?" 
    #Documents
      %h2 Documents
      -if can? :create, @document 
        =link_to( "upload document", new_user_document_path(@user))


      %h5 Users documents

      -@user.documents.each do |doc|
        %ol
          = link_to(doc.title, root_path)
          = link_to("edit document", root_path)
      %h5 Other documents
