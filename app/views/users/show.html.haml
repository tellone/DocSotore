!!!5
%html
  %head
    %title User
  %body
    #profile
      %h2 Profile
      %h5 Email -
      =@user.email
      
      %p
        -if can? :update, @user
          = link_to "edit profile", edit_user_path(@user)

        -if can? :manage, @user
          = link_to "delete user", :method => :delete, :confirm => "Do you realy want to remove this user?" 
    #Documents
      %h2 Documents
      -if can? :create, @document 
        =link_to( "upload document", new_user_document_path(@user))
        

      %h5 Users documents
      
      -@user.documents.each do |doc|
        %p
          = link_to(doc.title, [@user, doc])
          = link_to("edit document" edit_user_document(@user, doc))
      %h5 Other documents
      = link_to "All documents", user_documents_path(@user)
