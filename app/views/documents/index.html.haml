- content_for :title do
  %title DocStor- Documents

#list
  %h2 All documents
  -@documents.each do |doc|
    %ol
      %li
        =link_to(doc.title, [@user, doc])

        -if can? :manage, :all
          ||
          =link_to("edit", edit_user_document_path(@user,doc))
          ||
          =link_to("delete", [@user,doc], :metod => :delete, :cofirm => "are you sure You want to delete this document")
        -# -end
        %p 
          %ol
            Tags: 
            =raw doc.tag_list.map { |t| link_to( t, user_tag_path(current_user, t))}.join(', ')

